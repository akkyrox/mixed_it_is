<%= form_for :patient, url: patient_path(@patient), method: :patch do |f| %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :problem %>
      <%= f.text_area :problem %>
    </p>

    <p>
      <%=f.label :email_id %>
      <%=f.text_field :email_id %>
    </p>

    <p>
      <%= f.label :select_physician %>
      <%= collection_select(:physician, :physician_id, Physician.all, :id, :name,
                            {:prompt => 'Please select Physician'}) %>


    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', patients_path %>

